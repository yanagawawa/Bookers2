<div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book</h1>
     <% if @book.errors.any? %>
       <div id="error_explanation">
          <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
          <ul>
           <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
         </ul>
        </div>
      <% end %>
     <%= form_with model:@book, local:true do |f| %>
     <div class="form-group">
       <label for="book_title">Title</label><br>
       <%= f.text_field :title, autofocus: true, id:"book_title", class: "form-control book_title" %>
     </div>
     <div class="form-group">
       <label for="book_opinion">Opinion</label><br>
       <%= f.text_area :body, id:"book_opinion", class: "form-control book_body" %>
     </div>
     <div class="form-group">
       <%= f.submit "Update Book", class: "btn btn-success" %>
     </div>
     <% end %>
     <%= link_to "Show", book_path(@book.id) %>
     |
     <%= link_to "Back", books_path %>
   </div>
</div>