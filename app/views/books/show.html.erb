<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/newform', user: @user, book: @book %>
    <div class="col-md-8 offset-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                  <td>
                    <%= link_to user_path(@users.id) do %>
                    <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40'  %>
                    <br><%= @users.name %></br>
                    <% end %>
                  </td>
                  <td><%= link_to @books.title, book_path(@books.id) %></td>
                  <td><%= @books.body %></td>
                  <% if @user == current_user %>
                   <td><%= link_to "Edit", edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
                   <td><%= link_to "Destroy", book_path(@books), class: "btn btn-sm btn-danger", method: :delete %></td>
                  <% end %>
              </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>