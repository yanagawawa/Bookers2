<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class:"user", fallback: "no_image.jpg"%>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
            </tr>
         </tbody>
       </table>
       <div class="row">
         <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
       </div>
       <h2 class="mt-3">New book</h2>
       <%= form_with model: @post_image, local:true do |f| %>
       <h4>ショップ名</h4>
       <%= f.text_field :title %>
       <h4>説明</h4>
       <%= f.text_area :body %>
       <%= f.submit '投稿' %>
       <% end %>
    </div>
    <div class="col-md-8 offset-1"></div>
  </div>
</div>